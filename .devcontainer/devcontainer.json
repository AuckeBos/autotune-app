{
    "name": "Autotune App Dev",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "autotune-app",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                // Python development
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff",
                "ms-python.debugpy",
                // Prefect workflow
                "charliermarsh.prefect",
                // Git and version control
                "mhutchie.git-graph",
                // Markdown and documentation
                "yzhang.markdown-all-in-one",
                // General utilities
                "github.copilot",
                "github.copilot-chat",
                "ms-vscode.makefile-tools",
                "ms-vscode-remote.vscode-remote-extensionpack",
                // YAML support for docker-compose
                "redhat.vscode-yaml"
            ],
            "settings": {
                // Python configuration
                "python.linting.enabled": true,
                "python.linting.ruffEnabled": true,
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.fixAll": "explicit"
                    },
                    "python.formatting.provider": "ruff"
                },
                // Search configuration
                "search.exclude": {
                    "**/node_modules": true,
                    "**/__pycache__": true,
                    "**/.pytest_cache": true,
                    "**/.venv": true,
                    "**/htmlcov": true,
                    "**/.coverage": true
                },
                // Testing configuration
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                // YAML configuration
                "[yaml]": {
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true
                }
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "postCreateCommand": "bash -c 'echo \"Dev container initialized successfully!\" && python --version && uv --version'",
    "postStartCommand": "bash -c 'echo \"Starting Prefect agent...\" || true'", // 
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/appuser/.gitconfig,type=bind,consistency=cached"
    ]
}